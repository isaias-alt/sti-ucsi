---
import '@fontsource/montserrat/400.css'
import '@fontsource/montserrat/400-italic.css'
import '@fontsource/montserrat/600.css'
import '@fontsource/montserrat/600-italic.css'
import '@fontsource/montserrat/800.css'
import '@fontsource/montserrat/800-italic.css'
import '@fontsource/montserrat/900-italic.css'

import Navigation from '../components/Navigation.astro';
import Background from '../components/Background.astro'

const { title } = Astro.props;
const ogImage = 'public/sti.png'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<meta name='keywords' content='programacion, desarrollo, conferencia, seminario, tecnologia, informatica, ingenieria' />
		<meta name='author' content='Lucas Isaias Casco' />
		<meta name='og:url' content='https://sti-ucsi.com' />
		<meta name='og:site_name' content='Seminario Tecnologico Informatico' />
		<meta name='og:type' content='website' />
		<meta name='og:locale' content='es_ES' />
		<meta name='twitter:image' content={ogImage} />
		<meta name='og:image' content={ogImage} />
		<meta name='robots' content='index, follow' />
		<meta name='googlebot' content='index, follow' />
		<meta name="generator" content={Astro.generator} />
		<link rel="shortcut icon" href="public/favicon.ico" type="image/x-icon">
		<title>{title}</title>
	</head>
	<body>
		<Background />
		<div class='flex flex-col xl:flex-row justify-between m-auto xl:gap-x-24 xl:w-[1200px] mt-10 xl:mt-0'>
			<div class='w-full xl:w-52'>
				<Navigation />
			</div>
			<main class='flex-1 relative px-6'>
				<slot />
			</main>
		</div>
	</body>
</html>
<style is:global>
	html {
		font-family: "Montserrat", system-ui, sans-serif;
		scroll-behavior: smooth;
	}
	body {
		background: #000;
	}
</style>

